<h1>Add a new hiker</h1>

<form method="post" action="/hikers">
  <label for="first-name">First name:</label>
  <input id ="first-name" type="text" name="first_name"/>

  <label for="second-name">Last name:</label>
  <input id ="second-name" type="text" name="last_name"/>

  <label for="age">Age:</label>
  <input id ="age" type="number" name="age"/>

  <label for="munro-goal">How many munros would you like to climb? (optional)</label>
  <input id ="munro-goal" type="number" name="munro_goal"/>

  <input type="submit" value="Add hiker"/>

</form>
